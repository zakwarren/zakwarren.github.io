---
import { Picture } from "@astrojs/image/components";
import spaceImage from "~/assets/space-background.png";

const widths = [450, 800, 1200];
const sizes = "100vw";
---

<Picture
  class="object-cover w-full h-full"
  src={spaceImage}
  widths={widths}
  sizes={sizes}
  alt="The ridged surface of the moon"
/>
