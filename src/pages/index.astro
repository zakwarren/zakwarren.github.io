---
import BaseHead from "../components/BaseHead.astro";
import Hero from "../components/Hero.astro";
import Navigation from "../components/Navigation.astro";
import Scalable from "../components/home/Scalable.astro";

const title = "Zak Warren";
const description =
  "Zak Warren, Software Engineer Extraordinaire, creates amazing applications.";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead {title} {description} />
    <link rel="stylesheet" href={Astro.resolve("../styles/home.css")} />
  </head>

  <body>
    <Hero>
      <Navigation />
      <div class="hero-primary">
        <h1>Software Engineer Extraordinaire</h1>
        <h3>Zak Warren</h3>
      </div>
      <div class="hero-secondary">
        <p>Create smarter.</p>
      </div>
    </Hero>
    <section class="row">
      <Scalable />
    </section>
  </body>
</html>
